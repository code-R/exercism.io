<% if submissions.any? %>
<hr/>
  <div class="pending-submissions">
    <% submissions.each do |submission| %>
        <div class="pending-submission"
    data-user="<%= submission.user.username %>"
    data-exercise="<%= submission.slug %>"
    data-language="<%= submission.track_id %>"
    data-nits="<%= submission.nit_count %>"
    data-versions="<%= submission.version %>"
    data-url="/submissions/<%= submission.key %>">

    <div class="user col-md-7">
      <div class="avatar pull-left">
         <%= gravatar_tag submission.user.avatar_url, size: 30 %>
      </div>
      <div class="h5 muted">
        <% if current_user.guest? %>
          <%= submission.user.username %>
         <% else %>
          <a href="/#">
            <%= current_user.owns?(submission) ? "You" : submission.user.username %>
          </a>
         <% end %> submitted this exercise <%= ago(submission.created_at) %>
      </div>
    </div>

    <div class="nits col-md-1">
      <span class="circle"><%= submission.nit_count %></span>
    </div>

    <div class="versions col-md-1">
      <a href="/submissions/<%= submission.key %>"><span class="circle"><%= submission.version %></span></a>
    </div>

    <% if submission.liked? %>
      <div class="col-md-1">
        <i class="fa fa-ok"></i>
      </div>
    <% end %>
  </div>
      <% end %>
  </div>
<% end %>
